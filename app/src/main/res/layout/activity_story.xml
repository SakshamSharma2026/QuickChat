<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.StoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@id/rrll"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/storyimage"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/reverse"
                android:layout_weight="1"/>

            <View
                android:id="@+id/skip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <jp.shts.android.storiesprogressview.StoriesProgressView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:paddingLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:id="@+id/stories"
            android:paddingRight="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/stories"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/button_body_card_parent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/gray3"
                        android:id="@+id/img"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/username"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/button_body_card_parent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/time"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/username"
                />
        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/rrll"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/seentext"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:layout_toStartOf="@id/l"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/highlightstory"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:text="Highlight"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:id="@+id/l"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:id="@+id/deletestory"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:text="Delete"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />

        </LinearLayout>






    </RelativeLayout>

</RelativeLayout>