<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/button_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray3"
            android:layout_alignParentStart="true"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_image"
            android:id="@+id/card_image"
            app:cardCornerRadius="20dp"
            android:layout_height="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/msg_img"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/li"
            android:padding="5dp"
            android:layout_toEndOf="@id/button_image"
            android:background="@drawable/chat_border"
            android:backgroundTint="#f2f3f5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/texttime"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:padding="2dp"
                android:textSize="10sp"
                android:paddingStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="#E2808080"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seen"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/button_image"
            android:id="@+id/text_seen"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_below="@id/li"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/medium"
            android:textColor="#9F808080"
            />

    </RelativeLayout>




</RelativeLayout>
