<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:id="@+id/item_click_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/item_content_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/item_new_card_parent"
            android:layout_toEndOf="@+id/item_image_card_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#131313"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_text"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#787878"
                android:textSize="14sp" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:id="@+id/item_new_card_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastime"
                android:fontFamily="@font/medium"
                android:textSize="10sp"
                android:padding="5dp"
                android:textColor="@color/black"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/card_unread"
                android:layout_gravity="center"
                android:visibility="gone"
                app:cardBackgroundColor="#3796F0"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/unreadtext"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/medium"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>









        <androidx.cardview.widget.CardView
            android:id="@+id/item_image_card_parent"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#ececec"
            app:cardCornerRadius="27dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent" />





            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/item_badge_card_parent"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:layout_toEndOf="@+id/item_image_card_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-30dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:cardElevation="0dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/green"

                    />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_click_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        />

</RelativeLayout>